@model IEnumerable<Authentication.Models.ParentChild>

@{
    ViewData["Title"] = "Index";
}

<h1>Family Information</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Child)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Members.FirstName) @Html.DisplayFor(modelItem=>item.Members.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Child.FirstName) @Html.DisplayFor(modelItem =>item.Child.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
